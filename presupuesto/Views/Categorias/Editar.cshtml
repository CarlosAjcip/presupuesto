@model Categoria
@{
    ViewData["Title"] = "Editar Categoria";
}

<h1>Editar Cateogoria</h1>
<h5>La categoria nos permite indicar en que gastamos nuestro dinero, tambien, de donde provienen nuestro ingresos..</h5>

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="id_categorias" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="id_tiposOp" class="form-label"></label>
        <select asp-for="id_tiposOp" asp-items="Html.GetEnumSelectList<TipoOperacion>()" class="form-select"></select>
        <span asp-validation-for="id_tiposOp" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Actualizar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
