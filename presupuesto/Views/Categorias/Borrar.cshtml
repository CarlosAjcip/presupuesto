@model Categoria
@{
    ViewData["Title"] = "Borrar Categoria";
}

<h3>Esta seguro que desae borrar la categoria @Model.Nombre</h3>

<form asp-action="BorrarCategoria">
    <input type="hidden" asp-for="id_categorias" />
    <button class="btn btn-danger" type="submit">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
