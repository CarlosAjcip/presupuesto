@model TiposCuentas
@{
    ViewData["Title"] = "Borrar Tipo Cuenta ";
}

<h3 class="mb-3"> Esta seguro que desea borar el tipo cuenta @Model.Nombre?</h3>

<form asp-action="BorrarTipoCuenta">
    <input type="hidden" asp-for="id_tiposCuen" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</form>

